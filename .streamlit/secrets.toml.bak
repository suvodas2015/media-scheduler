# ---- Auth / Cookies ----
[cookie]
name = "wamsession"
key  = "a67f20527e1ee733df23865a3e166149c1bb71caa02763aba0188ec54b992513"   # >= 32 chars (64 is ideal)
expiry_days = 30


# ---- Users (bcrypt-hashed passwords) ----
[users.admin]
name     = "Admin User"
password = "$2b$12$KpVRqNiiT9mZzb1tiNFblubU7NoWTHFVbMXVOoFLEUPDj/q52FIue"  # replace with hash of your chosen admin password

[users.ops]
name     = "Ops Team"
password = "$2b$12$igyuXiJpQUEn9hYh.7pjrOj.jucmRrheFbQIs53z8.S7i2EBSwv3i"  # replace with hash of ops password

# ---- Role mapping (who can do what) ----
[roles]
admin = ["admin"]           # Only 'admin' username
ops   = ["ops", "admin"]    # Ops + Admin both have ops privileges

# ---- Twilio Defaults ----
[twilio]
account_sid   = "ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"   # your Twilio Account SID
auth_token    = "your_auth_token_here"                # your Twilio Auth Token
from_whatsapp = "whatsapp:+91XXXXXXXXXX"              # must be in whatsapp:+E164 format
